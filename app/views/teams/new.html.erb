<% title 'Create A New Team' %>

<%= form_for(@team) do |f| %>
  <% if @team.errors.any? %>
    <div class="notice notice-error">
      <%= @team.errors.full_messages.join '. ' %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

