<% title "Team #{@team.name}" %>

<%= form_for(@team) do |f| %>
  <% if @team.errors.any? %>
    <div class="notice notice-error">
      <%= @team.errors.full_messages.join ', ' %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Number</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @team.people.count == 0 %>
        <tr>
          <td colspan="3" class="empty">There are no people, yet.</td>
        </tr>
      <% else %>
        <%= f.fields_for :people do |fp| %>
          <tr>
            <td><%= fp.object.number %></td>
            <td><%= fp.text_field :name %></td>
            <td></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>

